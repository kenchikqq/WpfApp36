<Window x:Class="WpfApp36.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp36"
        Title="Список дел" Height="450" Width="400" Background="#FFF5E6D3" Icon="/Image/icon.png">
    <Window.Resources>
        <local:OverdueConverter x:Key="OverdueConverter"/>
        <local:TodayConverter x:Key="TodayConverter"/>
        <local:TomorrowConverter x:Key="TomorrowConverter"/>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush" Value="#5EBEC4"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="Background" Value="#FFFFFAD6"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#5EBEC4"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Cascadia Mono"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" Value="3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#5EBEC4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Cascadia Mono"/>
        </Style>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Save" Executed="SaveCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.New" Executed="AddCommand_Executed"/>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="ApplicationCommands.Save"/>
        <KeyBinding Key="N" Modifiers="Control" Command="ApplicationCommands.New"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Верхняя панель -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="10">
            <Button Width="30" Height="30" Command="ApplicationCommands.Save">
                <Image Source="/Image/save.png" Width="20" Height="20"/>
            </Button>
            <TextBlock Text="Список дел" Style="{StaticResource HeaderStyle}" DockPanel.Dock="Left"/>
            <Button x:Name="addButton" DockPanel.Dock="Right" Width="30" Height="30" Command="ApplicationCommands.New">
                <Image Source="/Image/add.png" Width="20" Height="20"/>
            </Button>
        </DockPanel>
        <!-- Список дел -->
        <ListBox x:Name="todoList" Grid.Row="1" Background="#FFF5E6D3" BorderThickness="0" HorizontalContentAlignment="Stretch" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BFE3E6D3"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- Чекбокс -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" Margin="2">
                            <CheckBox IsChecked="{Binding Doing, Mode=TwoWay}" VerticalAlignment="Top" Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>
                        </StackPanel>
                        <!-- Название и описание -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0,0,0">
                            <TextBlock Text="{Binding Title}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextDecorations" Value="{x:Null}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Doing}" Value="True">
                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <ScrollViewer Height="48" VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Black" TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </StackPanel>
                        <!-- Дата и кнопка удаления -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                            <TextBlock Text="{Binding DueDate, StringFormat=dd.MM.yyyy}" Margin="0,0,5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#5EBEC4"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DueDate, Converter={StaticResource OverdueConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DueDate, Converter={StaticResource TodayConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="#FFEA6A20"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DueDate, Converter={StaticResource TomorrowConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="#DAA520"/>
                                            </DataTrigger>
                                            <!-- Зеленый по умолчанию для будущих дат -->
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Button Click="DeleteButton_Click" Width="20" Height="20" Margin="2" Background="#5EBEC4" BorderThickness="0">
                                <Image Source="/Image/delete.png" Width="10" Height="10"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!-- Кастомный прогресс-бар -->
        <Grid Grid.Row="2" Margin="10">
            <Grid HorizontalAlignment="Center" Width="200" Height="20">
                <Border Background="#FFF5E6D3" BorderThickness="0"/>
                <Grid x:Name="progressBarFill" HorizontalAlignment="Left" Background="#5EBEC4"/>
                <TextBlock x:Name="progressTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" FontFamily="Cascadia Mono" Foreground="Black">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="White" Direction="0" ShadowDepth="0" BlurRadius="3" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
           
        </Grid>
    </Grid>
</Window>